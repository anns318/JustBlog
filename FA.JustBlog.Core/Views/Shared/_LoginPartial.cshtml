@using Microsoft.AspNetCore.Identity
@using FA.JustBlog.Core.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <a id="admin" class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Admin" asp-controller="Post" asp-action="Index" title="Manage">Manage</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout">
                <button style="color:#fff;font-size: 0.75rem;
    font-weight: 800;
    letter-spacing: 0.0625em;
    text-transform: uppercase;background-color: unset;" id="logout" type="submit" class="nav-link px-lg-3 py-3 py-lg-4 border-0">
                    Logout
                </button>
            </form>
            @* <a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a> *@
        </li>
    }
    else
    {
        <li class="nav-item">

            <a class="nav-link px-lg-3 py-3 py-lg-4" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link px-lg-3 py-3 py-lg-4" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
